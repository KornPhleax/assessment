---
apiVersion: cert-manager.io/v1
kind: Issuer
metadata:
  name: letsencrypt
  namespace: {{ kubernetes_namespace }}
spec:
  acme:
    server: {{ letsencrypt_server }}
    email: {{ letsencrypt_email }}
    privateKeySecretRef:
      name: letsencrypt
    solvers:
      - http01:
          ingress:
            ingressClassName: nginx
